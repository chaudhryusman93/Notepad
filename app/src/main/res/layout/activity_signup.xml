<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New user"
        android:textSize="45sp"
        android:textColor="@color/text"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="90sp"/>
    <TextView
        android:id="@+id/tvNiceUHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nice to see you here"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:layout_marginLeft="70sp"/>

    <EditText
        android:id="@+id/etSignEmail"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:hint="Enter your email"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="50sp"
        android:drawableRight="@drawable/ic_baseline_email_24"/>

    <EditText
        android:id="@+id/etSignPassword"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:hint="Enter your password"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="10sp"
        android:drawableRight="@drawable/ic_baseline_lock_24"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNewSignUp"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:textColor="@color/white"
        android:background="@color/text"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="50sp"/>

    <TextView
        android:id="@+id/tvWantLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to login?"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="130sp"/>











</LinearLayout>